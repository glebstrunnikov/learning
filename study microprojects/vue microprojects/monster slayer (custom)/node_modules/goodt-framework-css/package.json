{
    "name": "goodt-framework-css",
    "version": "1.1.4",
    "homepage": "https://goodt-css.netlify.app/",
    "main": "src/_all.less",
    "scripts": {
        "dev": "node scripts/dev.js",
        "watch": "watch \"npm run build\" ./src",
        "build": "npm run build:less && npm run build:postcss && npm run build:uglify && npm run build:meta && npm run build:docs",
        "build:less": "lessc ./src/_all.less ./dist/all.css --source-map=./dist/all.css.map && echo done",
        "build:postcss": "postcss ./dist/all.css --use autoprefixer -d ./dist && echo done",
        "build:uglify": "uglifycss --debug ./dist/all.css > ./dist/all.min.css && echo done",
        "build:meta": "node scripts/meta.js  && echo done",
        "build:docs": "node scripts/docs.js  && echo done",
        "deploy:docs": "npx netlify deploy --dir=docs --prod",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^9.8.5",
        "browser-sync": "^2.26.12",
        "less": "^3.12.2",
        "netlify-cli": "^5.0.1",
        "postcss-cli": "^7.1.1",
        "uglifycss": "0.0.29",
        "watch": "^1.0.2"
    },
    "directories": {
        "doc": "docs"
    },
    "description": "",
    "browserslist": [
        "> 1%",
        "last 2 version"
    ]
}
